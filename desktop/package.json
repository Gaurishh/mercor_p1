{
  "name": "inciteful-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gaurishh/mercor_p1.git"
  },
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "cross-env PORT=3001 BROWSER=none react-scripts start",
    "start:electron": "electron .",
    "build": "npm run build:react",
    "build:react": "react-scripts build",
    "build:win": "npm run build:react && electron-packager . \"Inciteful\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=assets/icon.ico --prune=true",
    "build:mac": "npm run build:react && electron-packager . \"Inciteful\" --platform=darwin --arch=x64 --out=dist --overwrite --icon=assets/icon.icns --prune=true",
    "build:linux": "npm run build:react && electron-packager . \"Inciteful\" --platform=linux --arch=x64 --out=dist --overwrite --icon=assets/icon.png --prune=true"
  },
  "build": {
    "appId": "com.mercor.p1",
    "productName": "Mercor p1",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "Gaurishh",
      "repo": "mercor_p1"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "latest",
    "cloudinary": "^2.7.0",
    "concurrently": "latest",
    "form-data": "^4.0.4",
    "node-fetch": "^3.3.2",
    "react": "latest",
    "react-dom": "latest",
    "react-redux": "^9.0.4",
    "react-router-dom": "latest",
    "react-scripts": "latest"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "latest",
    "electron-packager": "^17.1.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
